{
  "name": "spa-launcher",
  "version": "1.0.0",
  "description": "SP.A Minecraft Launcher",
  "main": "dist/main/index.js",
  "scripts": {
    "dev": "npm run build:main && concurrently \"npm run dev:renderer\" \"npm run dev:electron\"",
    "dev:renderer": "vite --config vite.config.ts",
    "dev:electron": "node -e \"setTimeout(()=>{process.env.VITE_DEV_SERVER='true';require('child_process').execSync('electron .', {stdio:'inherit',env:{...process.env,VITE_DEV_SERVER:'true'}})}, 3000)\"",
    "build": "npm run build:renderer && npm run build:main",
    "build:renderer": "vite build --config vite.config.ts",
    "build:main": "tsc -p tsconfig.main.json",
    "prepare-resources": "node prepare-resources.js",
    "dist": "npm run build && electron-builder",
    "dist:full": "npm run prepare-resources && npm run build && electron-builder",
    "start": "npm run build && electron ."
  },
  "dependencies": {
    "adm-zip": "^0.5.10",
    "form-data": "^4.0.0",
    "node-fetch": "^2.7.0"
  },
  "devDependencies": {
    "@types/adm-zip": "^0.5.5",
    "@types/node": "^20.11.0",
    "@types/node-fetch": "^2.6.11",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "@types/form-data": "^2.5.0",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.12"
  },
  "build": {
    "appId": "com.spa.launcher",
    "productName": "SP.A Launcher",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "resources/minecraft",
        "to": "minecraft",
        "filter": ["**/*"]
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    }
  }
}
